<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--- Hello-->

    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/purple_500"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_amount_language"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:layout_marginLeft="35dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:text="99,999.99,"
            android:padding="5dp"
            android:background="@drawable/squre_editext6"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/estellogo"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="5dp"/>




    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topbar"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/choose_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Language"
                android:textColor="@color/greydark"
                android:textSize="25sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/choose_language"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="150dp"
            android:layout_marginRight="70dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/englishLanguageChooseButton"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/squre_button"
                android:text="@string/englisg"
                android:textSize="20sp" />

            <Button
                android:id="@+id/frenchLanguageChooseButton"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/squre_button"
                android:text="@string/arabic"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/button_language"
            android:layout_marginTop="75dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:gravity="center">

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:background="@drawable/squre_editext_text"
                    android:gravity="center"
                    android:text="@string/confirm"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
           android:id="@+id/fab_language"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@drawable/bg480"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp" />


    </RelativeLayout>


</RelativeLayout>